{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "node"
        ]
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}